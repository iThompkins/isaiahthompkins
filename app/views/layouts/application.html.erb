<!DOCTYPE html>
<html>
  <head>
    <title>Sideline Programmer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bg-light">
      <%= render 'layouts/header' %>
    </div>
    <div class="mb-5">
      <%= render 'layouts/navbar' %>
    </div>
    <div class="row">
      <div class="col-2">
        <%= render 'layouts/info_sidebar' %>
      </div>
      <div class="col-7">
        <%= yield %>
      </div>
      <div class="col-2">
        <%= render 'layouts/content_sidebar' %>
      </div>
    </div>
  </body>
</html>
